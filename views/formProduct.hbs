<form action="/add" method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" class="form-control" id="name" placeholder="Product name*">
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="price" class="form-control" id="price" placeholder="Product price*">
    </div>

    <div class="mb-3">
        <label for="size" class="form-label">Size</label>
        <input type="text" name="size" class="form-control" id="size" placeholder="Product size*">
    </div>

    <div class="mb-3">
        <label for="img" class="form-label">Image</label>
        <input type="text" name="img" class="form-control" id="img" placeholder="Product img*">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>